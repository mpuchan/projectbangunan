<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.bangunankita">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon4apl"
        android:label="@string/app_name"
        android:roundIcon="@drawable/icon4apl"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">

        <activity android:name=".Perhitunganbidang"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name=".Tambahbidang"
            android:label="Tambah Bidang"
            android:parentActivityName=".Perhitunganbidang"
            android:theme="@style/Theme.AppCompat.Light.DarkActionBar"/>

        <activity android:name=".MenuProyek" />
        <activity android:name=".Edit_Proyek" />
        <activity
            android:name=".Add_Proyek"
            android:label="Buat Proyek"
            android:parentActivityName=".Dashboard"
            android:theme="@style/Theme.AppCompat.Light.DarkActionBar" />
        <activity
            android:name=".Dashboard"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".WelcomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Login"
            android:theme="@style/AppTheme.darks" />
        <activity
            android:name=".Register"
            android:label="Registrasi"
            android:parentActivityName=".Login"
            android:theme="@style/Theme.AppCompat.Light.DarkActionBar" />
        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_welcome"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>