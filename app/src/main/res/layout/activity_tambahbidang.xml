<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/margin_default"
    android:layout_weight="1"
    android:background="@android:color/white"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/margin_short"
    tools:context=".Tambahbidang">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@android:color/white"
        android:orientation="vertical"
       >

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="Menghitung luas Bidang"
            android:textColor="#FA575656" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="Isikan dalam satuan meter*"
            android:textColor="#FA575656" />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Theme.AppCompat.Light.DarkActionBar"
                android:layout_width="126dp"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/panjangb"
                    android:layout_width="113dp"
                    android:layout_height="wrap_content"
                    android:hint="Panjang"
                    android:inputType="textEmailAddress"
                    android:paddingBottom="16dp" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Theme.AppCompat.Light.DarkActionBar"
                android:layout_width="125dp"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/tinggib"
                    android:layout_width="125dp"
                    android:layout_height="wrap_content"
                    android:hint="Tinggi"
                    android:inputType="textLongMessage|textEmailAddress"
                    android:paddingBottom="16dp" />

            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/prosesbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="proses"
                android:textColor="#FFAB40"
                android:textStyle="bold|italic" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="173dp"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="isi data daur pintu"
                android:textColor="#FA575656" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="isi data daur jendela"
                android:textColor="#FA575656" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Theme.AppCompat.Light.DarkActionBar"
                android:layout_width="74dp"
                android:layout_height="match_parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/ppintu"
                    android:layout_width="68dp"
                    android:layout_height="wrap_content"
                    android:hint="Panjang"
                    android:inputType="textLongMessage|textEmailAddress"
                    android:paddingBottom="16dp"
                    android:text="0" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Theme.AppCompat.Light.DarkActionBar"
                android:layout_width="99dp"
                android:layout_height="match_parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/tpintu"
                    android:layout_width="79dp"
                    android:layout_height="wrap_content"
                    android:hint="Tinggi"
                    android:inputType="textEmailAddress"
                    android:paddingBottom="16dp"
                    android:text="0" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Theme.AppCompat.Light.DarkActionBar"
                android:layout_width="102dp"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/panjangj"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:hint="Panjang"
                    android:inputType="textEmailAddress"
                    android:paddingBottom="16dp"
                    android:text="0" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Theme.AppCompat.Light.DarkActionBar"
                android:layout_width="85dp"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/tinggij"
                    android:layout_width="77dp"
                    android:layout_height="wrap_content"
                    android:hint="Tinggi"
                    android:inputType="textLongMessage|textEmailAddress"
                    android:paddingBottom="16dp"
                    android:text="0" />

            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>


        <TextView
            android:id="@+id/textView14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="Luas bidang anda"
            android:textColor="#FA575656" />

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Theme.AppCompat.Light.DarkActionBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/luasbidang"
                android:layout_width="137dp"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:hint="Luas bidang"
                android:inputType="text"
                android:paddingBottom="16dp" />

        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView15"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Pilih batako/bata"
                android:textColor="#FA575656" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <Spinner
                    android:id="@+id/spinbata"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="#FA575656" />

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Theme.AppCompat.Light.DarkActionBar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/hbata"
                        android:layout_width="215dp"
                        android:layout_height="wrap_content"
                        android:enabled="false"
                        android:hint="Rp."
                        android:inputType="text"
                        android:paddingBottom="16dp" />

                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView12"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Pilih Semen"
                android:textColor="#FA575656" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <Spinner
                    android:id="@+id/spinsemen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="#FA575656" />

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Theme.AppCompat.Light.DarkActionBar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:enabled="false">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/hargasemen"
                        android:layout_width="215dp"
                        android:layout_height="wrap_content"
                        android:hint="Rp."
                        android:inputType="text"
                        android:paddingBottom="16dp" />

                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView21"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Pilih Pasir"
                android:textColor="#FA575656" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <Spinner
                    android:id="@+id/spinpasir"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/textView22"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="#FA575656" />

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Theme.AppCompat.Light.DarkActionBar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/hargapasir"
                        android:layout_width="215dp"
                        android:layout_height="wrap_content"
                        android:enabled="false"
                        android:hint="Rp."
                        android:inputType="text"
                        android:paddingBottom="16dp" />

                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView151"
                android:layout_width="275dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Pilih Campuran"
                android:textColor="#FA575656" />

            <Spinner
                android:id="@+id/spinner22"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:id="@+id/textView19"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <Button
                android:id="@+id/hitungb"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_short"
                android:layout_weight="1"
                android:background="@drawable/cornered_button"
                android:text="Hitung"
                android:textColor="@android:color/white" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="#FFAB40"
                android:text="Jumlah Material yang Dibutuhkan Beserta Perkiraan Biayanya:" />

            <TextView
                android:id="@+id/hasilb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tes"
                android:textColor="#FA575656" />
        </LinearLayout>

    </LinearLayout>


</androidx.core.widget.NestedScrollView>