<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView10"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#FFAB40"
        android:text="Jumlah Material yang Dibutuhkan Beserta Perkiraan Biayanya:"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Volume bidang anda : "
            android:textColor="#FA575656" />

        <TextView
            android:id="@+id/hasilvol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20000"
            android:textAlignment="textStart"
            android:textColor="#FA575656" />

        <TextView
            android:id="@+id/hasilb6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="5dp"
            android:text="m3"
            android:textAlignment="textStart"
            android:textColor="#FA575656" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="5dp">

        <TextView
            android:id="@+id/hasilb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pasir : "
            android:textColor="#FA575656" />

        <TextView
            android:id="@+id/hasilurugan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="300"
            android:textAlignment="textStart"
            android:textColor="#FA575656" />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:text="m3, "
            android:textColor="#FA575656" />

        <TextView
            android:id="@+id/hasilb12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="5dp"
            android:text="atau"
            android:textColor="#FA575656" />

        <TextView
            android:id="@+id/hasilpasirtruk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="5dp"
            android:text="200"
            android:textAlignment="textStart"
            android:textColor="#FA575656" />

        <TextView
            android:id="@+id/hasilb8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="5dp"
            android:text="Truk"
            android:textColor="#FA575656" />

        <TextView
            android:id="@+id/hasilb9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:text="Rp."
            android:textColor="#FA575656" />

        <TextView
            android:id="@+id/hasilhargap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="300"
            android:textAlignment="textStart"
            android:textColor="#FA575656" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Biaya : "
            android:textColor="#FA575656" />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:text="Rp."
            android:textAlignment="textStart"
            android:textColor="#FA575656" />

        <TextView
            android:id="@+id/totalbiaya"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="3000000"
            android:textAlignment="textStart"
            android:textColor="#FA575656" />

    </LinearLayout>

</LinearLayout>